# AI Model Improver - Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# Backend Configuration
# =============================================================================

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8050
BACKEND_WORKERS=4

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost/dbname

# =============================================================================
# Frontend Configuration
# =============================================================================

# API Configuration
VITE_API_BASE_URL=http://localhost:8050
VITE_APP_TITLE=AI Model Improver

# Development
NODE_ENV=development
VITE_DEV_SERVER_PORT=3058

# =============================================================================
# Docker Configuration
# =============================================================================

# Container Names
BACKEND_CONTAINER_NAME=ai-model-improver-backend
FRONTEND_CONTAINER_NAME=ai-model-improver-frontend

# Volume Paths
UPLOADS_VOLUME_PATH=./backend/uploads
STATIC_VOLUME_PATH=./backend/static

# =============================================================================
# Media Processing Configuration
# =============================================================================

# Video Processing
MAX_FRAMES_PER_VIDEO=100
FRAME_INTERVAL_SECONDS=1

# File Size Limits
MAX_UPLOAD_SIZE=100MB
MAX_FILE_SIZE=50MB

# Supported Formats
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff,gif
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,mkv,wmv,flv

# =============================================================================
# Production Configuration
# =============================================================================

# SSL/TLS (for production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Monitoring
# SENTRY_DSN=your-sentry-dsn
# LOGSTASH_HOST=localhost
# LOGSTASH_PORT=5000

# =============================================================================
# Development Overrides
# =============================================================================

# Uncomment for development
# DEBUG=true
# HOT_RELOAD=true 